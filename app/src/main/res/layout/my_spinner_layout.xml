<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/customspinnerLayout"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/customspinnerIcon"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagespinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#673AB7"
            android:padding="15dp"
            android:src="@drawable/baseline_directions_car_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="13dp"
            android:text="Car"
            android:textColor="@color/purple"
            android:id="@+id/textspinner"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/customspinnerIcon"
        android:layout_width="wrap_content"
        android:src="@drawable/baseline_arrow_drop_down_circle_24"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>